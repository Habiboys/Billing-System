{
    "openapi": "3.0.0",
    "info": {
        "title": "Billing System API",
        "version": "1.0.0",
        "description": "API dokumentasi untuk sistem billing dengan manajemen device dan transaksi"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Development server"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Category": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number"
                    }
                }
            },
            "Device": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "category": {
                        "$ref": "#/components/schemas/Category"
                    },
                    "isConnected": {
                        "type": "boolean",
                        "description": "Status koneksi device ke WebSocket"
                    },
                    "status": {
                        "type": "string",
                        "enum": ["on", "off", "offline"],
                        "description": "Status timer device: on (timer aktif), off (tidak aktif), offline (tidak terkoneksi)"
                    }
                }
            },
            "Transaction": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "userId": {
                        "type": "string"
                    },
                    "deviceId": {
                        "type": "string"
                    },
                    "amount": {
                        "type": "number"
                    },
                    "duration": {
                        "type": "number",
                        "description": "Durasi timer dalam milidetik"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    },
    "paths": {
        "/devices": {
            "get": {
                "summary": "Mendapatkan semua device",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Daftar device berhasil didapatkan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Device"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/devices/create": {
            "post": {
                "summary": "Mendaftarkan device baru",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["name", "categoryId", "deviceId"],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "categoryId": {
                                        "type": "integer"
                                    },
                                    "deviceId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Device berhasil didaftarkan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Device"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Input tidak valid atau device sudah terdaftar"
                    }
                }
            }
        },
        "/devices/{id}": {
            "get": {
                "summary": "Mendapatkan detail device berdasarkan ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detail device berhasil didapatkan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Device"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Device tidak ditemukan"
                    }
                }
            }
        },
        "/devices/connected": {
            "get": {
                "summary": "Mendapatkan daftar device yang terkoneksi",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Daftar device terkoneksi berhasil didapatkan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "totalConnected": {
                                                    "type": "integer"
                                                },
                                                "devices": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "deviceId": {
                                                                "type": "string"
                                                            },
                                                            "status": {
                                                                "type": "string",
                                                                "enum": ["on", "off"]
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/devices/unregistered": {
            "get": {
                "summary": "Mendapatkan daftar device yang terkoneksi tapi belum terdaftar",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Daftar device belum terdaftar berhasil didapatkan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "totalUnregistered": {
                                                    "type": "integer"
                                                },
                                                "unregisteredDevices": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/transactions/create": {
            "post": {
                "summary": "Membuat transaksi baru",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["deviceId", "duration"],
                                "properties": {
                                    "deviceId": {
                                        "type": "string"
                                    },
                                    "duration": {
                                        "type": "number",
                                        "description": "Durasi timer dalam milidetik"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Transaksi berhasil dibuat",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Transaction"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Input tidak valid atau device sedang digunakan"
                    },
                    "404": {
                        "description": "Device tidak ditemukan"
                    }
                }
            }
        },
        "/transactions": {
            "get": {
                "summary": "Mendapatkan semua transaksi (Admin only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Daftar transaksi berhasil didapatkan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Transaction"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/transactions/{id}": {
            "get": {
                "summary": "Mendapatkan detail transaksi berdasarkan ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detail transaksi berhasil didapatkan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Transaction"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Transaksi tidak ditemukan"
                    }
                }
            }
        },
        "/transactions/user/{userId}": {
            "get": {
                "summary": "Mendapatkan transaksi berdasarkan user ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Daftar transaksi user berhasil didapatkan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Transaction"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
} 